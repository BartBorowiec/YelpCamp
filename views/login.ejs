<% include ./partials/header %>
    <div class="row">
        <div class="col-md-12 text-center">
            <form class="form-signin" action="/login" method="post">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="inputEmail" class="sr-only">Username</label>
                <input class="form-control" type="text" id="inputEmail" name="username" placeholder="Username" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input class="form-control" type="password" id="inputPassword" name="password" placeholder="Password" required>
                <button class="btn btn-lg btn-primary btn-block">Sign in</button>
            </form>
            <a href="/forgot">Forgot your password?</a>
        </div>
    </div>
<% include ./partials/footer %>